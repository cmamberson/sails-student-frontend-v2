<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage Assignments</h2>
<button class="btn btn-success" id="addAssignmentButton">Add Assignment</button>
<table class="table table-striped table-bordered" id="assignmentTable" style="width:100%">
  <thead>
    <tr>
      <th>ID</th>
      <th>Assignment Number</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof assignments != "undefined" && assignments.length > 0){ %>
    <% assignments.forEach(function(assignment){ %>
      <tr>
        <td><%= assignment.assignment_id %></td>
        <td><%= assignment.assignment_nbr %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButtonAssignment" data-assignmentid="<%= assignment.assignment_id %>">edit</button>
          <button class="btn btn-danger" id="deleteButtonAssignment" data-assignmentid="<%= assignment.assignment_id %>">delete</button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirmAssignment">Are you sure you want to delete this record?</div>

<form action="/delete_assignment" method="POST" style="display: none;" id="deleteformAssignment">
  <input type="hidden" name="assignment_id" value="assignment">
</form>

<form style="display: none;" action="" method="POST" class="form-horizontal" id="manageAssignmentForm">
  <input type="hidden" name="assignment_id">
  <div class="form-group">
    <label for="assignment_nbr" class="col-sm-2 control-label">Assignment Number</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="assignment_nbr" name="assignment_nbr" placeholder="First Name" required>
    </div>
  </div>
</form>
