<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage Instructors</h2>
<button class="btn btn-success" id="addInstructorButton">Add Instructor</button>
<table class="table table-striped table-bordered" id="instructorTable" style="width:100%">
  <thead>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Years of Experience</th>
      <th>Tenured</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof instructors != "undefined" && instructors.length > 0){ %>
    <% instructors.forEach(function(instructor){ %>
      <tr>
        <td><%= instructor.instructor_id %></td>
        <td><%= instructor.first_name %></td>
        <td><%= instructor.last_name %></td>
        <td><%= instructor.years_of_experience %></td>
        <td><%= instructor.tenured %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButtonInstructor" data-instructorid="<%= instructor.instructor_id %>">edit</button>
          <button class="btn btn-danger" id="deleteButtonInstructor" data-instructorid="<%= instructor.instructor_id %>">delete</button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirmInstructor">Are you sure you want to delete this record?</div>

<form action="/delete_instructor" method="POST" style="display: none;" id="deleteformInstructor">
  <input type="hidden" name="instructor_id" value="instructor">
</form>

<form style="display: none;" action="" method="POST" class="form-horizontal" id="manageInstructorForm">
  <input type="hidden" name="instructor_id">
  <div class="form-group">
    <label for="first_name" class="col-sm-2 control-label">First Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="first_name" name="first_name" placeholder="First Name" required>
    </div>
  </div>
  <div class="form-group">
    <label for="last_name" class="col-sm-2 control-label">Last Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="last_name" name="last_name"  placeholder="Last Name" required>
    </div>
  </div>
  <div class="form-group">
    <label for="years_of_experience" class="col-sm-2 control-label">Years of Experience</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="years_of_experience" name="years_of_experience" placeholder="3" required>
    </div>
  </div>
  <div class="form-group">
    <label for="tenured" class="col-sm-2 control-label">Tenured</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="tenured" name="tenured" placeholder="0 or 1">
    </div>
  </div>
</form>
